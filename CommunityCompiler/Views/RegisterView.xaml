<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityCompiler.Views.RegisterView"
             xmlns:controls="clr-namespace:CommunityCompiler.Controls"
             NavigationPage.HasNavigationBar="False"
             Title="RegisterView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <controls:PageHeader />
            <Label 
                Text="Register"
                FontAttributes="Bold"
                FontFamily="Bold"
                FontSize="25"
                VerticalOptions="Center"
                Margin="15,0,0,0"
                HorizontalOptions="Start" />
        </StackLayout>
        <StackLayout
            Grid.Row="1"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            Margin="20,20,20,0" >
            <Label Text="User Name"
                   Margin="0,0,0,5"/>
            <Entry Placeholder="username"
                   x:Name="userNameEntry"
                   Margin="0,0,0,15"/>

            <Label Text="Phone Number"
                   Margin="0,0,0,5"/>
            <Entry Placeholder="Phone Number"
                   Margin="0,0,0,15"
                   x:Name="phoneNumberEntry"/>

            <Label Text="Email"
                   Margin="0,0,0,5"/>
            <Entry Placeholder="Your Email"
                   Margin="0,0,0,15"
                   x:Name="emailEntry"/>

            <Label Text="Password"
                   Margin="0,0,0,5"/>
            <Entry Placeholder="Password"
                   Margin="0,0,0,15"
                   IsPassword="True"
                   x:Name="passwordEntry"/>

            <Label Text="Confirm Password" />
            <Entry Placeholder="Password"
                   IsPassword="True"
                   x:Name="confirmPassEntry"/>
            <Button Text="Sign Up"
                    x:Name="registerBtn"
                    FontFamily="Bold"
                    BackgroundColor="#C17A55"
                    Clicked="registerBtn_clicked"
                    WidthRequest="100"
                    HorizontalOptions="Start"
                    Margin="0,10,0,15"/>
            <Label Text="Already have an account?"/>
            <Button Text="Sign In"
                    x:Name="signInBtn"
                    FontFamily="Bold"
                    WidthRequest="100"
                    HorizontalOptions="Start"
                    Clicked="loginBtn_clicked"
                    BackgroundColor="#C17A55"
                    Margin="0,10,0,15"/>
        </StackLayout>
    </Grid>
</ContentPage>
