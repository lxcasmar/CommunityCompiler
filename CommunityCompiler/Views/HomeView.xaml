<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityCompiler.Views.HomeView"
             Title="HomeView">
    <StackLayout Spacing="50">
        <Label 
            Text="This is the homeview!!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="favorites"
            Text="Navigate to FavoritesView"
            Clicked="favoriteBtn_clicked" />

        <Button
            x:Name="search"
            Text="Navigate to SearchEventsView"
            Clicked="searchEventBtn_clicked"/>

        <Button
            x:Name="profileSetting"
            Text="Navigate to profileSetting"
            Clicked="profileSettingBtn_clicked" />

    </StackLayout>
</ContentPage>
