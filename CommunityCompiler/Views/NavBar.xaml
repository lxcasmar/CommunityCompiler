<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityCompiler.Views.NavBar">
    <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="10" Margin="10,0,0,0" x:Name="barGrid">
        <!-- Home button -->
        <Button Text="Home" Command="{Binding NavigateToCommand}" CommandParameter="Views/HomeView"/>

        <!-- Favorites button -->
        <Button Text="Favorites" Command="{Binding NavigateToCommand}" CommandParameter="Views/FavoritesView"/>

        <!-- Search button -->
        <Button Text="Search" Command="{Binding NavigateToCommand}" CommandParameter="Views/SearchEventsView"/>

        <!-- Settings button -->
        <Button Text="Settings" Command="{Binding NavigateToCommand}" CommandParameter="Views/SettingView"/>
    </StackLayout>

    <StackLayout Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
        <!-- Optional logo or branding -->
        <Label Text="Community Compiler" FontSize="Large" />
    </StackLayout>
    </Grid>
</ContentView>

